{
  "name": "klever-connect",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "Unified JavaScript SDK for interacting with Klever blockchain",
  "repository": {
    "type": "git",
    "url": "https://github.com/klever-io/klever-connect.git"
  },
  "main": "index.js",
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "test:integration": "pnpm --filter '@klever/connect-provider' --filter '@klever/connect-transactions' run test:integration",
    "benchmark": "turbo run benchmark",
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --build",
    "dev": "turbo run dev --parallel",
    "clean": "turbo run clean && rm -rf node_modules",
    "changeset": "changeset",
    "version": "changeset version",
    "publish": "turbo run build && changeset publish",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.8.0",
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,yml,yaml}": [
      "prettier --check"
    ],
    "*.{ts,tsx}": [
      "eslint"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@eslint/js": "^9.38.0",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@typhonjs-typedoc/typedoc-theme-dmt": "^0.3.1",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "protobufjs": "^7.5.4",
    "protobufjs-cli": "^1.1.3",
    "tsup": "^8.5.0",
    "turbo": "^2.5.8",
    "typedoc": "0.27.9",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vite": "^7.1.12",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "vite": "^7.1.12",
      "glob": ">=10.5.0",
      "js-yaml": ">=4.1.1",
      "lodash": ">=4.17.23",
      "undici": ">=7.18.2"
    }
  }
}
