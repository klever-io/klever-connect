{
  "name": "@klever/connect-encoding",
  "version": "0.0.1",
  "description": "Encoding and decoding utilities for Klever Connect SDK",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./proto": {
      "types": "./dist/proto.d.ts",
      "import": "./dist/proto.mjs",
      "require": "./dist/proto.js",
      "default": "./dist/proto.js"
    }
  },
  "scripts": {
    "build:proto": "node scripts/build-proto.js",
    "build": "pnpm build:proto && tsup",
    "dev": "pnpm build:proto && tsup --watch",
    "test": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "clean": "rm -rf dist .turbo"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "klever",
    "blockchain",
    "sdk"
  ],
  "author": "Klever",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "dependencies": {
    "@scure/base": "^2.0.0"
  }
}
