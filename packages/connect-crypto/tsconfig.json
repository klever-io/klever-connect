{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "lib": ["ES2022", "DOM"],
    "paths": {
      "@klever/connect-core": ["../connect-core/src"],
      "@klever/connect-core/*": ["../connect-core/src/*"],
      "@klever/connect-encoding": ["../connect-encoding/src"],
      "@klever/connect-encoding/*": ["../connect-encoding/src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "../connect-encoding/src/encoding.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
