{
  "name": "@klever/connect-crypto",
  "version": "0.0.1",
  "description": "Cryptographic operations for Klever Connect SDK",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "dev": "tsup --watch",
    "clean": "rm -rf dist .turbo",
    "benchmark": "vitest bench benchmarks"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "klever",
    "blockchain",
    "sdk"
  ],
  "author": "Klever",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "dependencies": {
    "@klever/connect-core": "workspace:*",
    "@klever/connect-encoding": "workspace:*",
    "@noble/ed25519": "^2.0.0",
    "@noble/hashes": "^1.3.3",
    "@scure/base": "^2.0.0",
    "@scure/bip39": "^1.2.1"
  }
}
