{
  "name": "@klever/connect-react",
  "version": "0.1.2",
  "description": "React hooks and components for Klever Connect SDK",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "dev": "tsup --watch",
    "clean": "rm -rf dist .turbo"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "klever",
    "blockchain",
    "sdk"
  ],
  "author": "Klever",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "dependencies": {
    "@klever/connect": "workspace:*",
    "@klever/connect-contracts": "workspace:*",
    "@klever/connect-core": "workspace:*",
    "@klever/connect-provider": "workspace:*",
    "@klever/connect-transactions": "workspace:*",
    "@klever/connect-wallet": "workspace:*"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/klever-io/klever-connect.git",
    "directory": "packages/connect-react"
  }
}
