{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "lib": ["ES2022", "DOM"],
    "paths": {
      "@klever/connect-encoding": ["../connect-encoding/src"],
      "@klever/connect-encoding/*": ["../connect-encoding/src/*"]
    }
    // TypeScript will infer rootDir from the include patterns
    // lib includes DOM for browser APIs (window, navigator, etc.)
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
