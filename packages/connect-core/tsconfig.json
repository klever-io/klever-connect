{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@klever/connect-encoding": ["../connect-encoding/src"],
      "@klever/connect-encoding/*": ["../connect-encoding/src/*"]
