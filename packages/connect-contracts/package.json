{
  "name": "@klever/connect-contracts",
  "version": "0.0.1",
  "description": "Smart contract interaction for Klever blockchain",
  "author": "Klever",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@klever/connect-core": "workspace:*",
    "@klever/connect-encoding": "workspace:*",
    "@klever/connect-provider": "workspace:*",
    "@klever/connect-transactions": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.5.5",
    "tsup": "^8.3.0",
    "typescript": "^5.9.2",
    "vitest": "^1.6.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
